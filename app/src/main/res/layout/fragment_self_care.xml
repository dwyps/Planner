<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.survey.categories.CategoriesFragment">

    <ImageView
        android:id="@+id/self_care_image_view_background"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/bc_self_care"/>

    <TextView
        android:id="@+id/self_care_text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="SELF-CARE"
        android:textSize="24sp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="What do you need to start doing for yourself?"
        android:textSize="18sp"
        android:layout_marginStart="16dp"/>

    <Button
        android:id="@+id/self_care_btn_answer1"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/bc_categories_button"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:text="Living in the moment"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:id="@+id/self_care_btn_answer2"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/bc_categories_button"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Focusing on things that matter"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:id="@+id/self_care_btn_answer3"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/bc_categories_button"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Saving energy for important tasks"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:id="@+id/self_care_btn_answer4"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/bc_categories_button"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Meeting new people"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:id="@+id/self_care_btn_answer5"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/bc_categories_button"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Building healthy habits"
        android:textColor="@color/colorPrimary"/>

</LinearLayout>