<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.settings.SettingsFragment">

    <TextView
        android:id="@+id/settings_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        android:text="Settings" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/bc_settings"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="90dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@+id/settings_tv_title"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/settings_tv_title">

        <Button
            android:id="@+id/settings_btn_change_name"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@null"
            android:textAlignment="textStart"
            android:text="Change name"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:layout_marginTop="16dp"
            android:id="@+id/settings_btn_change_password"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@null"
            android:textAlignment="textStart"
            android:text="Change password"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:id="@+id/settings_btn_log_out"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@null"
            android:text="LOG OUT"
            android:textAlignment="textStart"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:id="@+id/settings_btn_delete_account"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@null"
            android:text="Delete Account"
            android:textAlignment="textStart"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>