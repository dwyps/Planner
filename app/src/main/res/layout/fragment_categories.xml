<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.survey.categories.CategoriesFragment">

    <ImageView
        android:id="@+id/categories_image_view_background"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:src="@drawable/bc_categories"/>

    <TextView
        android:id="@+id/categories_text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="CATEGORIES"
        android:textSize="24sp"
        android:layout_marginStart="16dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp">

        <Button
            android:id="@+id/categories_btn_self_care"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:background="@drawable/bc_categories_button"
            android:text="Self-care"
            android:layout_gravity="start"
            android:textColor="@color/colorPrimary"/>

        <CheckBox
            android:id="@+id/categories_checkbox_self_care"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="end"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/categories_btn_education"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:background="@drawable/bc_categories_button"
            android:text="Education"
            android:layout_gravity="start"
            android:textColor="@color/colorPrimary"/>

        <CheckBox
            android:id="@+id/categories_checkbox_education"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="end"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/categories_btn_activities"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:background="@drawable/bc_categories_button"
            android:text="Activities"
            android:layout_gravity="start"
            android:textColor="@color/colorPrimary"/>

        <CheckBox
            android:id="@+id/categories_checkbox_activities"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="end"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/categories_btn_entertainment"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:background="@drawable/bc_categories_button"
            android:text="Entertainment"
            android:layout_gravity="start"
            android:textColor="@color/colorPrimary"/>

        <CheckBox
            android:id="@+id/categories_checkbox_entertainment"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="end"/>
    </LinearLayout>

    <Button
        android:id="@+id/categories_btn_continue"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Go to questions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bc_button"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:textColor="@color/colorPrimary"/>

</LinearLayout>