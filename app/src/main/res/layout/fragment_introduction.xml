<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.survey.introduction.IntroductionFragment">

    <ImageView
        android:id="@+id/introduction_image_view_background"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:src="@drawable/bc_introduction"/>

    <TextView
        android:id="@+id/introduction_text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="Welcome to Planner"
        android:layout_marginTop="24dp"
        android:textSize="24sp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/introduction_text_view_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="@string/introduction_text"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:textSize="16sp"
        android:justificationMode="inter_word" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="60dp">

        <Button
            android:id="@+id/introduction_btn_continue"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Continue"
            android:layout_gravity="center"
            android:background="@drawable/bc_button"
            android:layout_marginEnd="10dp"
            android:foreground="?attr/selectableItemBackgroundBorderless" />

        <Button
            android:id="@+id/introduction_btn_skip"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Skip"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:background="@drawable/bc_button"
            android:foreground="?attr/selectableItemBackgroundBorderless" />

    </LinearLayout>

</LinearLayout>